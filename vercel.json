{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/images/(.*)",
            "dest": "public/images/$1"
        },
        {
            "src": "/uploads/(.*)",
            "dest": "public/uploads/$1"
        },
        {
            "src": "/cat_photos/(.*)",
            "dest": "public/cat_photos/$1"
        },
        {
            "src": "/auth/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/upload/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "server.js"
        }
    ]
} 